            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/projects/:projectId/members",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "projects", ":projectId", "members"],
              "variable": [
                { "key": "projectId", "value": "prj_001" }
              ]
            },
            "description": "List all members of a project with their roles and join dates."
