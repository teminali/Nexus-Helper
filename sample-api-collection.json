          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "header": [
                { "key": "Content-Type", "value": "application/json" }
              ],
              "body": "{\n  \"success\": true,\n  \"data\": {\n    \"invitationId\": \"inv_501\",\n    \"email\": \"alice@example.com\",\n    \"role\": \"editor\",\n    \"status\": \"pending\",\n    \"expiresAt\": \"2026-02-20T10:00:00Z\"\n  }\n}"
