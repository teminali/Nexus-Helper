          ]
        },
        {
          "name": "Remove Member",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/projects/:projectId/members/:memberId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "projects", ":projectId", "members", ":memberId"],
              "variable": [
                { "key": "projectId", "value": "prj_001" },
                { "key": "memberId", "value": "usr_ghi789" }
              ]
            },
            "description": "Remove a member from the project. Only the project owner or admins can do this."
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "header": [
                { "key": "Content-Type", "value": "application/json" }
