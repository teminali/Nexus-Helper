{
  "manifest_version": 3,
  "name": "Nexus Helper",
  "version": "3.3.0",
  "description": "AI context capture for code editors. Routes, screenshots, errors, API docs & smart prompts from a floating widget.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "tabs",
    "scripting",
    "webNavigation",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Nexus Helper",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/floating-widget.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-widget": {
      "suggested_key": {
        "default": "Alt+N",
        "mac": "Alt+N"
      },
      "description": "Toggle Nexus Helper floating widget"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup/popup.html",
        "popup/popup.css",
        "scripts/detect-path.js",
        "scripts/main-world-network.js",
        "scripts/speech-bridge.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}